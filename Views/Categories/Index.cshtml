@model IEnumerable<assignment2WebApp.Models.Category>

@{
    ViewData["Title"] = "Northwing offers food in these caregories";
}

<h1>@ViewBag.Title</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewBag.CategoriesNameSortParam">
                Name
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewBag.CategoriesDescriptionSortParam">
                Description
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
        
        </tr>
}
    </tbody>
</table>
